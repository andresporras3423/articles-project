<article class="main-article-container">
<%unless @most_voted_article.nil?%>
<div class="main-article" style="background-image: url(<%= rails_blob_url(@most_voted_article.image) if @most_voted_article.image.attached?%>)">
<h3><%=@most_voted_article.title%></h3>
<p><%=(@most_voted_article.text[0,150]+'...') %></p>
<%= link_to "Read More", "/show_article?id=#{@most_voted_article.id}" %> 
</div>
<%end%>
</article>

<div class="categories-container">
<%@categories.each do |category|%>
<% most_recent_article = recent_article_by_category(category.id)%>
<%unless most_recent_article.nil?%>
<div class="by-category"  style="background-image: url(<%= rails_blob_url(most_recent_article.image) %>)">
<span><%= link_to category.name, "/by_category?id=#{category.id}" %></span>
<h4><%=most_recent_article.title%></h4>
</div>
<%end%>
<%end%>
</div>
